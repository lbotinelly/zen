@page
@using Zen.Base.Extension
@model UserModel
@{ Layout = "_Layout"; ViewBag.Title = "All Users";}

<h2>All Reservations</h2>
<a asp-controller="User" asp-action="Add" class="btn btn-sm btn-primary">Add User</a>
<a asp-controller="User" asp-action="Get" class="btn btn-sm btn-secondary">Get User</a>
<table class="table table-sm table-striped table-bordered m-2">
    <thead><tr><th>ID</th><th>Name</th><th>Update</th><th>Delete</th></tr></thead>
    <tbody>
    @foreach (var r in Model.Items)
    {
        <tr>
            <td>@r.Id</td>
            <td>@r.ToJson()</td>
            <td>
                <a asp-controller="User" asp-action="Update" asp-route-id="@r.Id">Update</a>
            </td>
            <td>
                <form asp-controller="User" asp-action="Delete" method="post">
                    <input type="hidden" value="@r.Id" name="UserId" />
                    Delete
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>